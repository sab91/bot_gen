extends layouts/common.pug
block content
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.shadow
        .container
            a.navbar-brand(href='/dashboard') Gestion de Bots
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarResponsive.collapse.navbar-collapse
                ul.navbar-nav.ml-auto
                    li.nav-item.active
                        a.nav-link(href='/gestionBots')
                            | Bots
                            span.sr-only (current)
                    li.nav-item
                        a.nav-link(href='/gestionIntents') Intents
                    li.nav-item
                        a.nav-link(href='/test') Test
                    li.nav-item
                        a.nav-link(href='#') Contact
    // Full Page Image Header with Vertically Centered Content
    header.masthead
        .container.h-100
            .row.align-items-center
                .col-12.h-100
                    a.btn.btn-primary.mt-1(type='button', href='/bots/create').mb-1#createBots Create
                    table.table.table-dark
                        thead
                            tr
                                th(scope='col') #
                                th(scope='col') Name
                                th(scope='col') Status
                                th(scope='col') Last updated
                                th(scope='col') Date Created
                                th(scope='col') Action
                        tbody
                            each intent, index in intents
                                tr
                                    th(scope='row')= index + 1
                                    td= intent.name
                                    td= intent.status
                                    td= intent.lastUpdatedDate
                                    td= intent.createdDate
                                    td 
                                      button(onclick="window.location.href = '/deleteBot';") Delete
